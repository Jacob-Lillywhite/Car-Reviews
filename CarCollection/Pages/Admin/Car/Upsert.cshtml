@page
@model CarCollection.Pages.Admin.Car.UpsertModel
    <div id="mainDiv">
        <form method="post" asp-action="Upsert">
            <div class="container">
                <div class="row px-2 mx-2 backgroundWhite border">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                        <h2 class="text-primary">@(Model.CarObj.Id!=0 ? "Update" : "Create") Car</h2>
                    </div>
                    <div class="col-8 pt-3">
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="CarObj.Make"></label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="CarObj.Make" />
                                <span class="text-danger" asp-validation-for="CarObj.Make"></span>
                            </div>
                            @if (Model.CarObj.Id != 0)
                            {
                                <input type="hidden" asp-for="CarObj.Make" />
                            }
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="CarObj.Model"></label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="CarObj.Model" />
                                <span class="text-danger" asp-validation-for="CarObj.Model"></span>
                            </div>
                            @if (Model.CarObj.Id != 0)
                            {
                                <input type="hidden" asp-for="CarObj.Model" />
                            }
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="CarObj.Year"></label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="CarObj.Year" />
                                <span class="text-danger" asp-validation-for="CarObj.Year"></span>
                            </div>
                            @if (Model.CarObj.Id != 0)
                            {
                                <input type="hidden" asp-for="CarObj.Year" />
                            }
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="CarObj.Condition"></label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="CarObj.Condition" />
                                <span class="text-danger" asp-validation-for="CarObj.Condition"></span>
                            </div>
                            @if (Model.CarObj.Id != 0)
                            {
                                <input type="hidden" asp-for="CarObj.Condition" />
                            }
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="CarObj.Price"></label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" asp-for="CarObj.Price" />
                                <span class="text-danger" asp-validation-for="CarObj.Price"></span>
                            </div>
                            @if (Model.CarObj.Id != 0)
                            {
                                <input type="hidden" asp-for="CarObj.Price" />
                            }
                        </div>
                        <div class="form-group row">
                            <div class="col-9 offset-3">
                                <div class="row">
                                    <div class="col-6">
                                        <button type="submit" class="btn btn-primary form-control">@(Model.CarObj.Id!=0 ? "Update" : "Create")</button>
                                    </div>
                                    <div class="col-6">
                                        <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

